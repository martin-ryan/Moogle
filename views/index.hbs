<script type="text/template" id="login-template">
  <article>
    <input type="text" id="login-username" value="" placeholder="Your username">
    <input type="password" id="login-password" value="" placeholder="You Password">
    <button type="button" id="login-btn">Submit</button>
  </article>
</script>

<script type="text/template" id="location-template">
  <article>
    <p>
      <strong>Name: </strong><%= name %>
    </p>
    <p>
      <strong>Website: </strong><%= website %>
    </p>
    <p>
      <strong>Burgers: </strong>
      <ul>
        <% for (var burger in burgers) { %>
          <li><%= burgers[burger]["name"] %> </li>
          <%= burgers[burger]["description"] %>
        <% } %>
        <% if (latenight) { %>
          <p><strong><em>Yes, we're open late!</em></strong></p>
        <% } %>
        <% if (alcohol) { %>
          <p><strong><em>Yes, we serve alcohol!</em></strong></p>
        <% } %>
      </ul><hr>
    </p>
  </article>
</script>


<script type="text/template" id="search-template">
