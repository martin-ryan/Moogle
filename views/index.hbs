    <p>
      <strong>Challenges: </strong> <%= challenges %>
    </p>
    <p>
      <strong>Foodtruck: </strong> <%= foodtruck %>
      <ul>
        <% for (var truck in foodtruck) { %>
          <li><%= foodtruck[truck]["name"] %><li>
            <%= foodtruck[truck]["description"] %>
        <% } %>
      </ul><hr>
    </p>
    <p>
      <strong>Veggie: </strong> <%= veggie %>
    </p>
  </article>
</script>


